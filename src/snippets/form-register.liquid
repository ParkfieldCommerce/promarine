<!-- snippets/form-register.liquid -->

<div id="RegisterForm" class="center{% if ajax_register %} ajaxForm{% endif %}">

  {% form 'create_customer' %}

    {{ form.errors | default_errors }}

    <h1 class="title">Create an Account</h1>

    <div class="row">
      <div class="column l6 m6 s12">
        <label for="FirstName" class="clearfix left">{{ 'account.first_name' | t }}</label>
        <input type="text" name="customer[first_name]" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>
      </div>
      <div class="column l6 m6 s12">
        <label for="LastName" class="clearfix left">{{ 'account.last_name' | t }}</label>
        <input type="text" name="customer[last_name]" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">
      </div>
    </div>

    <label for="Email" class="clearfix left">{{ 'form.email' | t }}</label>
    <input type="email" name="customer[email]" id="Email" {% if form.errors contains 'email' %}class="error"{% endif %} {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">

    <label for="CreatePassword" class="clearfix left">{{ 'account.password' | t }}</label>
    <input type="password" name="customer[password]" id="CreatePassword" {% if form.errors contains 'password' %}class="error"{% endif %}>

    <input type="submit" value="{{ 'account.register' | t }}">
    <a class="btn primary-btn act-register">{{ 'account.register' | t }}</a>

  {% endform %}

</div>
