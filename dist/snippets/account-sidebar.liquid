<!-- /snippets/account-sidebar.liquid -->
<div class="account-sidebar">
	<h3 class="title">Account Details</h3>
	<div class="account-sb-body">
		<p>{{ customer.name }}</p>
		<p>
			{{ customer.default_address.street }}
		</p>
		<p>
			{{ customer.default_address.city | capitalize }}
			{% if customer.default_address.province_code %}
        {{ customer.default_address.province_code | upcase }},
      {% endif %}
		</p>
		<p>
			{{ customer.default_address.zip | upcase }},
      {{ customer.default_address.country }}<br>
      {{ customer.default_address.phone }}
		</p>
		
		<a href="/account/addresses" title="{{ 'account.address.manage_addresses' | t }}">
		{{ 'account.address.manage_addresses' | t }} ({{ customer.addresses_count }})</a>
		<br>
		<br>
		<a href="/account/logout" title="{{ 'account.logout' | t }}">{{ 'account.logout' | t }}</a>
			  
	</div>
</div>
