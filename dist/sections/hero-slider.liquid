<style>
  .hero-slider {
    background: url({{ section.settings.hero_background | img_url: 'master' }});
    background-position: 50% 50%;
    background-size: cover;
  }
</style>
<section class="hero-slider">
  <div class="slider" id="hero-slider">
    {% for block in section.blocks %}
      {% assign settings = block.settings %}
      <div class="slider-contents">
        <div class="container l">
          <div class="row l-table m-table s-table">


            {% capture img_div %}
              <div class="column l6 m4 s4">
                {% if settings.image_feature %}
                  <div class="hero-img-container">
                    <img src="{{ settings.image_feature | img_url: 'master' }}" alt="">
                  </div>
                {% endif %}
              </div>
            {% endcapture %}

            {% if settings.image_placement ==  'right' %}
              <div class="column s1 m1"></div>
            {% endif %}

            {% if settings.image_placement ==  'left' %}
              <div class="column s1 m1"></div>
              {{ img_div }}
            {% endif %}

            <div class="column l6 m6 s6">
              <h3 class="hero-feature">{{ settings.text_feature }}</h3>
              {% if settings.button_text %}
                <div class="hero-btn">
                  <a href="{{ settings.button_url }}" class="btn secondary-btn">{{ settings.button_text }}</a>
                </div>
              {% endif %}
            </div>

            {% if settings.image_placement ==  'right' %}
              {{ img_div }}
              <div class="column s1 m1"></div>
            {% endif %}

          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
{% schema %}
  {
    "name": "Hero Slider",
    "class": "hero-slider-section",
    "max_blocks": 9,
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_background",
        "label": "Background Image"
      }
    ],
    "blocks": [
      {
        "type": "hero_block",
        "name": "Hero Block",
        "settings": [
          {
            "type": "radio",
            "id": "image_placement",
            "label": "Image Placement",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
          },
          {
            "type": "image_picker",
            "id": "image_feature",
            "label": "Feature Image"
          },
          {
            "type": "textarea",
            "id": "text_feature",
            "label": "Featured Text",
            "default": "Some text here"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Slider",
        "category": "Hero",
        "blocks": [
          {
            "type": "hero_block"
          }
        ]
      }
    ]
  }
{% endschema %}
