<!-- /snippets/theme-footer.liquid -->

{% assign heading = section.settings.heading %}
{% assign email_placeholder = section.settings.email_placeholder %}
{% assign button_text = section.settings.button_text %}
{% assign success = section.settings.success %}
{% assign show_button = section.settings.show_button %}
<style>
  .theme-footer {
    background: url({{ section.settings.footer-bg | img_url:'master' }});
    background-position: 50% 50%;
    background-size: cover;
  }
</style>

<footer class="theme-footer" role="contentinfo">
  <div class="container l">
    <div class="row l-table m-table">
      <div class="column l2 m3 s12" id="mb-order2">
        <ul class="footer-nav">
          {% for link in linklists['footer'].links %}
            <li><a href="{{link.url}}">{{link.title}}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="column l2 m2 s12" id="mb-order3">
        <ul class="footer-nav">
          {% for link in linklists['footer-about'].links %}
            <li><a href="{{link.url}}">{{link.title}}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="column l4 m3 s12" id="mb-order4">
        <ul class="footer-nav">
          {% for link in linklists['footer-contact'].links %}
            <li><a href="{{link.url}}">{{link.title}}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="column l4 m4 s12" id="mb-order">
        {% if section.settings.enable_social %}
          <p class="lead">Stay Connected</p>
          {% include 'social-links' %}
        {% endif %}
        <div class="subscribe-input">
          {% if section.settings.enable_subscribe %}
            <h5>{{ heading }}</h5>
            {% include 'section-subscribe-form' %}
          {% endif %}
        </div>
      </div>
    </div>
    <div class="row footer-extras">
      <div class="column l5 m5 s12" id="mb-order3">
        <small>&copy; {{ 'now' | date: "%Y" }} <a href="/">{{ shop.name }}</a> | All Rights Reserved</small>
      </div>
      <div class="column l2 m2 s12 footer-logo" id="mb-order2">
        {% if section.settings.footer_logo %}
          <img src="{{section.settings.footer_logo | img_url:'master'}}" alt="">
        {% endif %}
      </div>
      <div class="column l5 m5 s12" id="mb-order">
        {% if section.settings.enable_gateway_icons %}
          {% include 'payment-gateways' %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>
{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "type": "image_picker",
        "id": "footer-bg",
        "label": "Background"
      },
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Footer Logo"
      },
      {
        "type": "checkbox",
        "id": "enable_social",
        "label": "Show social media icons"
      },
      {
        "type": "checkbox",
        "id": "enable_gateway_icons",
        "label": "Show payment gateway icons",
        "info": "Relevant payment icons will appear automatically when configured in [Payment Settings](/admin/settings/payments)"
      },
      {
        "type": "header",
        "content": "Subscribe form"
      },
      {
        "type": "checkbox",
        "id": "enable_subscribe",
        "label": "Show subscribe form"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Title",
        "placeholder": "Subscribe"
      },
      {
        "id": "email_placeholder",
        "type": "text",
        "placeholder": "Email",
        "label": "Email Placeholder",
        "default": "Email"
      },
      {
        "id": "show_button",
        "type": "checkbox",
        "default": true,
        "label": "Show button"
      },
      {
        "id": "success",
        "type": "text",
        "placeholder": "Thank you for subscribing",
        "label": "Confirmation message",
        "default": "Thank you for subscribing"
      },
      {
        "id": "button_text",
        "type": "text",
        "label": "Button Text",
        "default": "Subscribe"
      }
    ]
  }
{% endschema %}
